{% extends 'TutoresBundle::email.html.twig' %}


{% block body %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

    <h1 class="title">Información para tutores</h1>
    <h2>{{ cuestionarios[0].getCreador() }} ha solicitado información referente a los siguientes alumnos:</h2>
    <ul>
        {% for cuestionario in cuestionarios %}
            <li>{{ cuestionario.getAlumno() }}</li>
        {% endfor %}
    </ul>

    Para rellenar el cuestionario, por favor, haga click en el siguiente enlace <br />

    <a href="{{ url('sonata_admin_cuestionarioasignado_list') }}">Acceder a los cuestionarios pendientes</a>

    <p>Tutores App</p>

{% endblock %}
